#include <stdio.h>

int main() {
    int seats = 40;
    int choice = 1;

    while(seats > 0 && choice != 0) {

        printf("Seats remaining: %d\n", seats);
        printf("Press 1 to book seat, 0 to stop: ");
        scanf("%d", &choice);

        if(choice == 1) {
            seats--;
        }
    }

    if(seats == 0)
        printf("All seats booked!\n");
    else
        printf("Reservation stopped.\n");

    return 0;
}
